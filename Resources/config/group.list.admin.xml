<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonata.admin.group_list_manager.class">Sonata\DoctrinePHPCRAdminBundle\Admin\GroupListManager</parameter>
    </parameters>

    <services>
        <service id="cmf_block.admin.group_list_manager" class="%sonata.admin.group_list_manager.class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_content" label_catalogue="CmfBlockBundle" label="dashboard.group_content" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>Symfony\Cmf\Bundle\BlockBundle\Document\BaseBlock</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>
        </service>

    </services>
</container>
